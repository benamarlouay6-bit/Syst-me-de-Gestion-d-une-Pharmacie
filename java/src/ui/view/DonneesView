package ui.view;

import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class DonneesView {

    public void start(Stage stage) {

        Label title = new Label("Gestion des Données");

        Button btnClients = new Button("Clients");
        Button btnEmployes = new Button("Employés");
        btnClients.setOnAction(e -> {
            Stage s = new Stage();
            new ClientView().start(s);
            s.toFront();
        });
        btnEmployes.setOnAction(e -> {
            Stage s = new Stage();
            new EmployeView().start(s);
            s.toFront();
        });

        VBox root = new VBox(20, title, btnClients, btnEmployes);
        root.setAlignment(Pos.CENTER);

        stage.setScene(new Scene(root, 300, 250));
        stage.setTitle("Données");
        stage.show();
    }
}
